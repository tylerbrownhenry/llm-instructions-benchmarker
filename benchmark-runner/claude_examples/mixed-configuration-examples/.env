# Environment Variables (Precedence: 5 - Highest)

# Override project settings for local development
NODE_ENV=development
LOG_LEVEL=debug

# Claude-specific environment overrides
CLAUDE_VERBOSE=true
CLAUDE_DEFAULT_AGENT=react-specialist
CLAUDE_ENABLE_HOOKS=true

# API Configuration
API_BASE_URL=http://localhost:3001
DATABASE_URL=postgresql://localhost:5432/ecommerce_dev
REDIS_URL=redis://localhost:6379

# Development secrets (local only)
STRIPE_SECRET_KEY=sk_test_...
SENTRY_DSN=https://...@sentry.io/...
JWT_SECRET=local-dev-secret

# Tool permissions (can override user settings but not enterprise)
CLAUDE_ALLOW_TOOLS=Read,Write,Edit,Bash,Glob,Grep,WebFetch
CLAUDE_RUN_TESTS_ON_EDIT=true

# Personal development preferences
CLAUDE_PERSONAL_MODE=true
CLAUDE_EXPLAIN_CHANGES=true