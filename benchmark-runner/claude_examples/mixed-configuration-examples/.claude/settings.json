{
  "configType": "project",
  "precedence": 3,
  
  "project": {
    "name": "react-ecommerce",
    "type": "frontend",
    "framework": "react-typescript"
  },
  
  "environment": {
    "NODE_ENV": "development",
    "API_BASE_URL": "http://localhost:3001",
    "DATABASE_URL": "postgresql://localhost:5432/ecommerce_dev"
  },
  
  "hooks": [
    {
      "event": "PostToolUse",
      "matcher": "Edit",
      "command": "if [[ \"$CLAUDE_TOOL_INPUT_FILE_PATH\" == *.tsx || \"$CLAUDE_TOOL_INPUT_FILE_PATH\" == *.ts ]]; then npx eslint \"$CLAUDE_TOOL_INPUT_FILE_PATH\" --fix; fi"
    },
    {
      "event": "PostToolUse", 
      "matcher": "Write|Edit",
      "command": "if [[ \"$CLAUDE_TOOL_INPUT_FILE_PATH\" == *test* ]]; then npm test -- \"$CLAUDE_TOOL_INPUT_FILE_PATH\" --passWithNoTests; fi"
    }
  ],
  
  "agents": [
    {
      "name": "react-specialist",
      "description": "React/TypeScript specialist for this project",
      "instructions": "Focus on React best practices, TypeScript strict mode, and accessibility",
      "scope": ["src/components/**", "src/pages/**"],
      "concurrent": true
    },
    {
      "name": "testing-specialist",
      "description": "Testing specialist for React components",
      "instructions": "Write comprehensive tests using React Testing Library",
      "scope": ["**/*.test.*", "**/*.spec.*"],
      "concurrent": false
    }
  ],
  
  "testing": {
    "framework": "jest",
    "coverage": 85,
    "runOnEdit": true
  }
}