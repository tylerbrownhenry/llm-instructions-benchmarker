{
  "managedBy": "Enterprise IT Policy",
  "precedence": 1,
  
  "permissions": {
    "allowTools": ["Read", "Write", "Edit", "Bash", "Glob", "Grep"],
    "denyTools": ["WebFetch", "WebSearch"],
    "requireApproval": ["Bash:rm", "Bash:sudo", "Bash:docker"]
  },
  
  "security": {
    "maxSessionDuration": 7200,
    "auditLogging": true,
    "encryptTranscripts": true
  },
  
  "hooks": {
    "mandatory": [
      {
        "event": "PreToolUse",
        "matcher": "*",
        "command": "logger -t claude-enterprise \"$USER: $CLAUDE_TOOL_INPUT_COMMAND\""
      }
    ]
  },
  
  "agents": {
    "allowCustomAgents": false,
    "approvedAgents": ["enterprise-dev", "security-auditor"]
  }
}