{
  "configType": "user",
  "precedence": 2,
  
  "preferences": {
    "verbose": true,
    "theme": "dark",
    "notifications": true
  },
  
  "environment": {
    "CLAUDE_WORKSPACE": "/Users/john/Development",
    "DEFAULT_EDITOR": "code",
    "LOG_LEVEL": "debug"
  },
  
  "hooks": [
    {
      "event": "PostToolUse",
      "matcher": "Edit|Write",
      "command": "npx prettier --write \"$CLAUDE_TOOL_INPUT_FILE_PATH\" 2>/dev/null || true"
    }
  ],
  
  "agents": [
    {
      "name": "personal-assistant",
      "description": "Personal development helper",
      "instructions": "Explain changes clearly and prefer TypeScript",
      "defaultActive": false
    }
  ],
  
  "customCommands": {
    "quick-commit": "git add . && git commit -m 'WIP: $(date +%H:%M)'",
    "dev-setup": "npm install && npm run dev"
  }
}