# Claude Code Environment Configuration
# This file shows all available environment variables for Claude Code

# === API Configuration ===
ANTHROPIC_API_KEY=your-api-key-here
CLAUDE_CODE_USE_BEDROCK=false
CLAUDE_CODE_BEDROCK_REGION=us-west-2
CLAUDE_CODE_API_URL=https://api.anthropic.com

# === Tool Permissions ===
CLAUDE_ALLOW_TOOLS=Read,Write,Edit,Bash,Glob,Grep
CLAUDE_DENY_TOOLS=WebFetch
CLAUDE_REQUIRE_APPROVAL=Bash:rm,Bash:sudo,Bash:curl

# === Agent Configuration ===
CLAUDE_DEFAULT_AGENT=development-assistant
CLAUDE_ENABLE_CONCURRENT_AGENTS=true
CLAUDE_MAX_CONCURRENT_AGENTS=3

# === Hook Configuration ===
CLAUDE_ENABLE_HOOKS=true
CLAUDE_HOOK_TIMEOUT=30000
CLAUDE_HOOK_LOG_LEVEL=info

# === Development Settings ===
CLAUDE_WORKSPACE=/Users/$USER/Development
CLAUDE_PROJECT_ROOT=.
CLAUDE_DEFAULT_EDITOR=code
CLAUDE_VERBOSE=false

# === Logging and Monitoring ===
CLAUDE_LOG_LEVEL=info
CLAUDE_LOG_FILE=.claude/activity.log
CLAUDE_ENABLE_TELEMETRY=true
CLAUDE_CLEANUP_PERIOD_DAYS=30

# === Security Settings ===
CLAUDE_INCLUDE_COAUTHORED_BY=true
CLAUDE_REQUIRE_COMMIT_APPROVAL=false
CLAUDE_SANDBOX_MODE=false

# === Performance Settings ===
CLAUDE_TIMEOUT=120000
CLAUDE_MAX_MEMORY=2048
CLAUDE_ENABLE_CACHE=true
CLAUDE_CACHE_SIZE=1000

# === Integration Settings ===
CLAUDE_GIT_AUTO_STAGE=false
CLAUDE_GIT_AUTO_COMMIT=false
CLAUDE_GIT_AUTO_PUSH=false

# === Development Environment ===
NODE_ENV=development
LOG_LEVEL=debug
DATABASE_URL=postgresql://localhost:5432/dev_db
REDIS_URL=redis://localhost:6379
API_BASE_URL=http://localhost:3000

# === Testing Configuration ===
CLAUDE_RUN_TESTS_ON_EDIT=true
CLAUDE_TEST_FRAMEWORK=jest
CLAUDE_COVERAGE_THRESHOLD=80
CLAUDE_E2E_FRAMEWORK=playwright

# === Build Configuration ===
CLAUDE_AUTO_BUILD=false
CLAUDE_BUILD_COMMAND=npm run build
CLAUDE_BUILD_OUTPUT=dist
CLAUDE_WATCH_FILES=src/**/*,tests/**/*

# === Notification Settings ===
CLAUDE_NOTIFICATIONS_ENABLED=true
CLAUDE_NOTIFICATION_SOUND=false
CLAUDE_SLACK_WEBHOOK_URL=https://hooks.slack.com/services/...
CLAUDE_EMAIL_NOTIFICATIONS=false

# === Custom Tool Configuration ===
CLAUDE_CUSTOM_TOOLS_PATH=.claude/tools
CLAUDE_TOOL_TIMEOUT=60000
CLAUDE_ENABLE_EXPERIMENTAL_TOOLS=false