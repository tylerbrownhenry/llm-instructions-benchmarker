      "expertKnowledge": true
    }
  },

  "monitoring": {
    "realTimeMetrics": {
      "testExecutionSpeed": true,
      "healingSuccessRate": true,
      "selectorStability": true,
      "appiumPerformance": true,
      "agentCoordination": true
    },
    "dashboards": {
