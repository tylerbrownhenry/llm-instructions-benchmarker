{
  "project": {
    "name": "example-project",
    "type": "fullstack",
    "framework": "react-node",
    "language": "typescript"
  },
  
  "environment": {
    "node_version": "18.x",
    "package_manager": "npm",
    "editor": "vscode"
  },

  "automation": {
    "auto_install_deps": true,
    "auto_format": true,
    "auto_lint": true,
    "auto_test": false,
    "auto_commit": false
  },

  "code_style": {
    "formatter": "prettier",
    "linter": "eslint", 
    "indent_size": 2,
    "quote_style": "single",
    "semicolons": true,
    "trailing_commas": "es5"
  },

  "file_templates": {
    "component": "templates/component.tsx.template",
    "test": "templates/test.template.js",
    "api": "templates/api-route.template.ts"
  },

  "shortcuts": {
    "create-component": "mkdir -p src/components/{name} && cp templates/component.tsx.template src/components/{name}/{name}.tsx",
    "run-dev": "npm run dev",
    "run-tests": "npm test",
    "build-prod": "npm run build && npm run test:e2e"
  },

  "integrations": {
    "github": {
      "auto_pr": false,
      "branch_protection": true,
      "require_reviews": true
    },
    "ci_cd": {
      "provider": "github-actions",
      "auto_deploy": false,
      "test_on_pr": true
    },
    "monitoring": {
      "error_tracking": "sentry",
      "analytics": "mixpanel",
      "logging": "winston"
    }
  },

  "ai_behavior": {
    "explain_changes": true,
    "ask_before_breaking": true,
    "prefer_incremental": true,
    "suggest_improvements": true
  }
}